<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="50dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SWAPPER AND CHECKER"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@color/white"

            />

    </LinearLayout>



    <!-- CONTAINER EDITTEXT AND CHECKBOX-->
    <LinearLayout
        android:id="@+id/firstbox"
        android:layout_below="@+id/Title"

        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--EDITTEXT-->

        <EditText
            android:id="@+id/text1"

            android:layout_width="277dp"
            android:layout_height="50dp"
            android:hint="Enter text 1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!--CHECKBOX-->

        <Button
            android:id="@+id/buttonSwap"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="SWAP"
            android:buttonTint="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondbox"
        android:layout_width="match_parent"
        android:layout_below="@+id/firstbox"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--EDITTEXT-->

        <EditText
            android:id="@+id/text2"

            android:layout_width="277dp"
            android:layout_height="50dp"
            android:layout_below="@id/text1"
            android:hint="Enter text 2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!--CHECKBOX-->

        <Button
            android:id="@+id/buttonCheck"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHECK"
            android:layout_marginLeft="5dp"
            android:buttonTint="@color/black"
            />

    </LinearLayout>


</RelativeLayout>